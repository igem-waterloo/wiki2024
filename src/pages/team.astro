<style lang="scss">
	@import '../global.scss';

	main {
		.hero {
			display: flex;
			gap: 5rem;
			margin-top: 5rem;
			.left {
				display: flex;
				flex-direction: column;
				align-items: center;

				h1 {
					font-size: 3rem;
				}

				.cloud {
					width: 100%;
					position: relative;

					img {
						width: 100rem;
						position: absolute;
					}
					.jump {
						display: flex;
						flex-direction: column;
						gap: 1rem;
						// position: absolute;
						a {
							font-size: 1.5rem;
							color: white;
							@include transition-ease;
							&:hover {
								color: darkgreen;
							}
						}
					}
				}
				img {
				}
			}

			.right {
				width: 100%;
				background: darkgreen;
			}
		}

		img {
			width: 10rem;
			@include move-across-screen;
			animation: move-across-screen 10s linear infinite;
		}

		@keyframes move-across-screen {
			0% {
				transform: translateX(-100vw);
			}
			100% {
				transform: translateX(100vw);
				opacity: 0;
			}
		}

		#lnd {
			background: lightblue;
		}

		#mnm {
			background: purple;
		}

		#hp {
			background: teal;
		}
	}
</style>
