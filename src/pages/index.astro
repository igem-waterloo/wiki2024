---
import HomeLayout from '../layouts/HomeLayout.astro';
---

<HomeLayout title="BovEco">
	<main>
		<div class="welcome-text">
			<h3>Waterloo iGEM Presents...</h3>
			<h1>BovEco</h1>
			<h2>[enter slogan here?]</h2>
		</div>
		<div class="stat1">
			<div class="num">73%.</div>
			<div class="text">
				That's the proportion of agricultural methane emissions released by
				ruminants.
			</div>
		</div>
	</main>
</HomeLayout>

<style lang="scss">
	@import '../global.scss';
	main {
		.welcome-text {
			font-family: 'Quartzo', sans-serif;
			text-align: center;
			margin-top: 10rem;
			z-index: 1;

			h1 {
				font-size: 10rem;
			}

			h2 {
				font-size: 2rem;
			}

			h3 {
				font-size: 2rem;
			}
		}

		.stat1 {
			display: flex;
			justify-content: space-between;
			align-items: center;
			gap: 2rem;
			padding: 2rem;
			background: rgb(48, 64, 52);
			color: $primary;

			.num {
				font-size: 20rem;
			}

			.text {
				width: 50%;
				font-size: 3rem;
			}
		}
	}
</style>
