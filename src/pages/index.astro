<style lang="scss">
	@import '../global.scss';
	main {
		.welcome-text {
			display: flex;
			flex-direction: column;
			align-items: center;
			color: $accent-1;
			margin-top: 2.5rem;
			z-index: -50;

			img {
				width: 10rem;
				filter: hue-rotate(275deg) saturate(50%);
				margin-bottom: 0.75rem;
			}

			h1 {
				font-family: 'Quartzo', sans-serif;
				font-size: 10rem;
				text-shadow: 5px 5px 0 $accent-3;
				margin-top: -0.5rem;
			}

			h2 {
				font-size: 2.25rem;

				span {
					&:nth-of-type(1) {
						color: $accent-4;
						text-shadow: 2.5px 2.5px 0 $accent-3;
					}

					&:nth-of-type(2) {
						color: rgba($secondary, 0.8);
						text-shadow: 2.5px 2.5px 0 $accent-3;
					}

					&:nth-of-type(3) {
						box-shadow: 15px 15px 1px $accent-1;
					}
				}
			}

			h3 {
				font-size: 2rem;
			}
		}

		.stat1 {
			display: flex;
			justify-content: center;
			align-items: center;
			background: $accent-1;
			color: $primary;
			padding: 3rem;
			margin-top: 30rem;

			.num {
				min-width: 4ch; // avoid layout shift
				font-size: 15rem;
				text-shadow: 5px 5px 0 $secondary;
				margin-bottom: -2.5rem;
			}

			.text {
				font-size: 3rem;

				span {
					&:nth-of-type(1) {
						color: $accent-3;
					}

					&:nth-of-type(2) {
						color: $secondary;
					}
				}
			}
		}

		.stat2 {
			display: flex;
			flex-direction: column;
			font-size: 5rem;
			margin-top: 30rem;

			div {
				width: 60%;
				margin-top: 8rem;
				margin-left: 5rem;
				position: relative;
				animation: bounce-around 2s ease infinite;

				&:nth-of-type(2) {
					margin-top: 3rem;
				}

				.cow-num {
					color: rgba($secondary, 0.6);
					text-shadow: 5px 5px 0 $primary;
				}

				.methane {
					color: rgba($accent-4, 0.8);
					text-shadow: 5px 5px 0 $accent-3;
				}
			}

			img {
				&:nth-of-type(1) {
					width: 35rem;
					filter: sepia(50%);
					margin-top: 5rem;
					position: absolute;
					right: 0;
					z-index: 5;
				}
				&:nth-of-type(2) {
					width: 20rem;
					opacity: 0.9;
					margin-top: 15rem;
					position: absolute;
					right: 0;
					clip-path: inset(0 0 48% 0);
				}
			}
		}

		.stat3 {
			display: flex;
			flex-direction: column;
			align-items: center;
			text-align: center;
			font-size: 2.5rem;
			margin-top: 20rem;

			.num {
				font-size: 18rem;
				text-shadow: 5px 5px 0 $accent-3;
				color: rgba($primary, 0.7);
				margin-top: 1.5rem;
				margin-bottom: -1rem;
			}

			.text {
				width: 50%;
				line-height: 1.25;

				span {
					&:nth-of-type(1) {
						color: rgba($primary, 0.7);
					}
					&:nth-of-type(2) {
						color: $accent-4;
					}

					&:nth-of-type(3) {
						color: $secondary;
					}
				}
			}
		}

		.fact1 {
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: 5rem;
			font-size: 3rem;
			color: $primary;
			margin-top: 30rem;
			margin-left: -7rem;
			position: relative;

			div {
				background: $accent-4;
				padding: 2rem;
				animation: bounce-around 2s ease infinite;
				&:nth-of-type(1) {
					position: relative;
					top: -10%;
					left: -10%;
				}

				&:nth-of-type(2) {
					position: relative;
					top: 10%;
					left: 10%;
				}

				span {
					color: $secondary;
				}
			}
		}

		.fact2 {
			display: flex;
			flex-direction: column;
			align-items: center;
			line-height: 1.1;
			font-size: 3rem;
			background: $accent-2;
			color: $primary;
			padding: 3rem 0;
			margin-top: 30rem;

			img {
				filter: sepia(80%);
				box-shadow: 1px 1px 20px $accent-3;
				margin: 3rem 0;
			}

			div {
				width: 65%;
				text-align: center;
				margin-bottom: 1rem;

				.methane {
					color: $accent-3;
				}
				.animal {
					color: $secondary;
				}
			}
		}

		.fact3 {
			margin-top: 30rem;

			img {
				width: 20rem;
				filter: hue-rotate(10deg) saturate(120%) brightness(110%);

				&:nth-of-type(1) {
					transform: rotate(-90deg);
					position: absolute;
					right: -1rem;
					margin-left: 2rem;
				}

				&:nth-of-type(2) {
					position: absolute;
					left: -1rem;
					transform: rotate(90deg);
				}
			}

			div {
				width: 70%;
				font-size: 5rem;
				color: $secondary;
				padding: 1rem;
				margin: 4rem;
				animation: bounce-around 2s ease infinite;

				span {
					color: $accent-3;
					text-shadow: 5px 5px 0 $accent-4;
				}
			}
		}

		.stat4 {
			display: flex;
			flex-direction: column;
			align-items: end;
			text-align: right;
			line-height: 1.25;
			font-size: 3rem;
			background: $accent-2;
			color: $primary;
			padding: 3rem;
			margin-top: 50rem;

			h4 {
				font-size: 5rem;
			}

			.img-wrapper {
				display: flex;
				justify-content: flex-end;
				gap: 1rem;
				margin: 2rem 0;

				img {
					width: 20rem;
					filter: sepia(80%);
					right: 0;
				}
			}

			div {
				margin-bottom: 1rem;

				span {
					color: $accent-3;
				}
			}
		}

		@keyframes bounce-around {
			100% {
				transform: translateY(0);
			}
			40% {
				transform: translateY(-10px);
			}
			60% {
				transform: translateY(-5px);
			}
		}

		.what-if {
			display: flex;
			flex-direction: column;
			align-items: flex-start;
			gap: 2rem;
			font-size: 3rem;
			margin-top: 30rem;
			margin-left: 4rem;

			h4 {
				font-size: 10rem;
				text-shadow: 5px 5px 0 $accent-3;
				color: $primary;
			}

			.text1 {
				font-size: 6rem;
				color: $accent-1;

				span {
					color: $secondary;
					text-shadow: 2.5px 2.5px 0 $primary;
				}
			}

			.text2 {
				font-size: 8rem;
				color: $accent-4;

				span {
					font-size: 15rem;
					text-shadow: 5px 5px 0 $accent-3;
					margin-left: 2rem;
					position: absolute;
				}
			}

			button {
				background: $accent-1;
				color: $primary;
				font-size: 3rem;
				padding: 1rem 2rem;
				border: none;
				border-radius: 1rem;
				margin-top: 1.5rem;
				box-shadow: 5px -10px 0 $accent-3;
				cursor: pointer;
				@include transition-ease;

				&:hover {
					background: $accent-4;
				}

				&:active {
					transform: scale(0.95);
					box-shadow: 5px -4px 0 $accent-3;
				}
			}
		}

		.bottom {
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			position: relative;

			.iframe-wrapper {
				display: flex;
				align-items: center;
				gap: 2rem;

				iframe {
					margin: 5rem 1rem;
				}
			}

			.references {
				width: 100%;
				background: linear-gradient(to bottom, #005a9c, #001f4d);
				color: $primary;
				opacity: 0.7;
				padding: 2rem;
				clip-path: polygon(
					0 10px,
					10% 5px,
					20% 15px,
					30% 5px,
					40% 10px,
					50% 5px,
					60% 15px,
					70% 5px,
					80% 10px,
					90% 5px,
