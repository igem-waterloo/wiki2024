---
import { ViewTransitions } from 'astro:transitions';
import HomeLayout from '../layouts/HomeLayout.astro';
---

<script>
	let responsiveNum = document.querySelectorAll('.stat1 .num, .stat3 .num');
	console.log(responsiveNum);
	let interval = 1000;

	// Entries: all the things that've been observed (intersected, or not)
	const observer = new IntersectionObserver(
		entries => {
			console.log(entries);
			entries.forEach(entry => {
				if (entry.isIntersecting) {
					responsiveNum.forEach(num => {
						let startValue = 0;
						// let endValue = 73;
						let endValue = num.closest('.stat1') ? 73 : 73.5;
						// if (num.closest('.stat1')) endValue = 73;
						// else if (num.closest('.stat3')) endValue = 73.5;
						let duration = Math.floor(interval / endValue);
						let counter = setInterval(() => {
							startValue += num.closest('.stat1') ? 1 : 3.5;
							// if (num.closest('.stat1')) startValue += 3.5;
							// num.textContent = startValue.toFixed(1);
							num.textContent = num.closest('.stat1')
								? `${startValue.toFixed(0)}%.`
								: startValue.toFixed(1);
							if (startValue >= endValue) clearInterval(counter);
						}, duration);
					});
					observer.unobserve(entry.target);
				}
			});
		},
		{
			threshold: 1, // animation starts once 100% of element's visible
			rootMargin: '200px', // animation starts 100px before element's visible
		},
	);

	responsiveNum.forEach(num => observer.observe(num));
</script>

