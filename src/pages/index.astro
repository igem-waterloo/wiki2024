<style lang="scss">
	@import '../global.scss';
	main {
		.welcome-text {
			display: flex;
			flex-direction: column;
			align-items: center;
			color: $accent-1;
			margin-top: 2.5rem;
			z-index: -50;

			img {
				width: 10rem;
				filter: hue-rotate(275deg) saturate(50%);
				margin-bottom: 0.75rem;
			}

			h1 {
				font-family: 'Quartzo', sans-serif;
				font-size: 10rem;
				text-shadow: 5px 5px 0 $accent-3;
				margin-top: -0.5rem;
			}

			h2 {
				font-size: 2.25rem;

				span {
					&:nth-of-type(1) {
						color: $accent-4;
						text-shadow: 2.5px 2.5px 0 $accent-3;
					}

					&:nth-of-type(2) {
						opacity: 0.8;
						text-shadow: 2.5px 2.5px 0 $accent-3;
					}

					&:nth-of-type(3) {
						box-shadow: 15px 15px 1px $accent-1;
					}
				}
			}

			h3 {
				font-size: 2rem;
			}
		}

		.stat1 {
			display: flex;
			justify-content: center;
			align-items: center;
			background: $accent-1;
			color: $primary;
			padding: 3rem;
			margin-top: 30rem;

			.num {
				min-width: 4ch; // avoid layout shift
				font-size: 15rem;
				text-shadow: 5px 5px 0 $secondary;
				margin-bottom: -2.5rem;
			}

			.text {
				font-size: 3rem;

				span {
					&:nth-of-type(1) {
						color: $accent-3;
					}

					&:nth-of-type(2) {
						color: $secondary;
					}
				}
			}
		}

		.stat2 {
			display: flex;
			flex-direction: column;
			font-size: 5rem;
			margin-top: 30rem;

			div {
				width: 60%;
				margin-top: 8rem;
				margin-left: 5rem;
				position: relative;
				// z-index: 5;
				animation: bounce-around 2s ease infinite;

				&:nth-of-type(2) {
					margin-top: 3rem;
				}

				.cow-num {
					color: rgba($secondary, 0.6);
					text-shadow: 5px 5px 0 $primary;
				}

				.methane {
					color: rgba($accent-4, 0.8);
					text-shadow: 5px 5px 0 $accent-3;
				}
			}

			img {
				&:nth-of-type(1) {
					width: 35rem;
					filter: sepia(50%);
					margin-top: 5rem;
					position: absolute;
					right: 0;
					z-index: 5;
				}
				&:nth-of-type(2) {
					width: 20rem;
					opacity: 0.9;
					margin-top: 15rem;
					position: absolute;
					right: 0;
					clip-path: inset(0 0 48% 0);
				}
			}
		}

		.stat3 {
			display: flex;
			flex-direction: column;
			align-items: center;
			text-align: center;
			font-size: 2.5rem;
			margin-top: 20rem;

			.num {
				font-size: 18rem;
				text-shadow: 5px 5px 0 $accent-3;
				color: rgba($primary, 0.7);
				margin-top: 1.5rem;
				margin-bottom: -1rem;
			}

			.text {
				width: 50%;
				line-height: 1.25;

				span {
					&:nth-of-type(1) {
						color: rgba($primary, 0.7);
					}
					&:nth-of-type(2) {
						color: $accent-4;
					}

					&:nth-of-type(3) {
						color: $secondary;
					}
				}
			}
		}

		.fact1 {
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: 5rem;
			font-size: 3rem;
			color: $primary;
			margin-top: 30rem;
			margin-left: -7rem;
			position: relative;

			div {
				background: $accent-4;
				padding: 2rem;
				animation: bounce-around 2s ease infinite;
				&:nth-of-type(1) {
					position: relative;
					top: -10%;
					left: -10%;
				}

				&:nth-of-type(2) {
					position: relative;
					top: 10%;
					left: 10%;
				}

				span {
					color: $secondary;
				}
			}
		}

		.fact2 {
			display: flex;
			flex-direction: column;
			align-items: center;
			line-height: 1;
			font-size: 3rem;
			background: $accent-2;
			color: $primary;
			padding: 3rem 0;
			margin-top: 30rem;

			img {
				filter: sepia(80%);
				box-shadow: 1px 1px 20px $accent-3;
				margin: 3rem 0;
			}

			div {
				width: 70%;
				text-align: center;
				margin-bottom: 1rem;

				.methane {
					color: $accent-3;
				}
				.animal {
					color: $secondary;
				}
			}
		}

		.fact3 {
			margin-top: 30rem;

			img {
				width: 20rem;
				filter: saturate(120%) brightness(120%);

				&:nth-of-type(1) {
					transform: rotate(-90deg);
					position: absolute;
					right: -1rem;
					margin-left: 2rem;
				}

				&:nth-of-type(2) {
					position: absolute;
					left: -1rem;
					transform: rotate(90deg);
				}
			}

			div {
				width: 70%;
				font-size: 5rem;
				// background: $accent-1;
				color: $secondary;
				padding: 1rem;
				margin: 4rem;
				animation: bounce-around 2s ease infinite;

				span {
					color: $accent-3;
					text-shadow: 5px 5px 0 $accent-4;
				}
			}
		}

		.stat4 {
			display: flex;
			flex-direction: column;
			align-items: end;
			text-align: right;
			line-height: 1.25;
			font-size: 3rem;
			background: $accent-2;
			color: $primary;
			padding: 3rem;
			margin-top: 50rem;

			h4 {
