				justify-content: flex-end;
				gap: 1rem;
				margin: 2rem 0;

				img {
					width: 20rem;
					filter: sepia(80%);
					right: 0;
				}
			}

			div {
				margin-bottom: 1rem;

				span {
					color: $accent-3;
				}
			}
		}

		.what-if {
			display: flex;
			flex-direction: column;
			align-items: flex-start;
			gap: 2rem;
			font-size: 3rem;
			margin-top: 30rem;
			margin-left: 4rem;

			h4 {
				font-size: 10rem;
				text-shadow: 5px 5px 0 $accent-3;
				color: $primary;
			}

			.text1 {
				font-size: 6rem;
				color: $accent-1;

				span {
					color: $secondary;
					text-shadow: 2.5px 2.5px 0 $primary;
				}
			}

			.text2 {
				font-size: 8rem;
				color: $accent-4;

				span {
					font-size: 15rem;
					text-shadow: 5px 5px 0 $accent-3;
					margin-left: 2rem;
					position: absolute;
				}
			}

			button {
				background: $accent-1;
				color: $primary;
				font-size: 3rem;
				padding: 1rem 2rem;
				border: none;
				border-radius: 1rem;
				margin-top: 1.5rem;
				box-shadow: 5px -10px 0 $accent-3;
				cursor: pointer;
				@include transition-ease;

				&:hover {
					background: $accent-4;
				}

				&:active {
					transform: scale(0.95);
					box-shadow: 5px -4px 0 $accent-3;
				}
			}
		}

		.bottom {
			display: flex;
			justify-content: center;
			align-items: center;

			video {
				width: 80%;
				height: 100%;
				margin: 5rem 0;
			}
		}

		@keyframes bounce-around {
			100% {
				transform: translateY(0);
			}
			40% {
				transform: translateY(-10px);
			}
			60% {
				transform: translateY(-5px);
			}
		}
	}
</style>
