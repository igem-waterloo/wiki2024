---
import TeamLayout from '../layouts/TeamLayout.astro';
import MemberProfile from '../components/MemberProfile.astro';
---

<TeamLayout title="Members | BovEco - iGEM 2024">
	<main>
		<section class="hero">
			<h1>MEET THE TEAM!</h1>
			<iframe
				title="Waterloo: Team Pictures (2024)"
				width="560"
				height="315"
				src="https://video.igem.org/videos/embed/fec72963-4abe-48a0-b360-05353de818d9"
				sandbox="allow-same-origin allow-scripts allow-popups allow-forms"
			>
			</iframe>
		</section>
		<section class="members-container">
			<h2>Lab & Design</h2>
			<div id="lnd">
				<MemberProfile name="aadila-zakir-hussain" />
				<MemberProfile name="alex-d-souza" />
				<MemberProfile name="athena-chong" />
				<MemberProfile name="ayana-pak" />
				<MemberProfile name="bethany-chan" />
				<MemberProfile name="curtis-yeung" />
				<MemberProfile name="douglas-moulton" />
				<MemberProfile name="emma-llewellyn" />
				<MemberProfile name="felix-tham" />
				<MemberProfile name="hannah-tao" />
				<MemberProfile name="lauren-robinson" />
				<MemberProfile name="milena-gojsevic" />
				<MemberProfile name="noura-abdelrazec" />
				<MemberProfile name="rhyan-mclean" />
				<MemberProfile name="stefan-grinchenko" />
				<MemberProfile name="timea-siket" />
				<MemberProfile name="yusra-pervez" />
			</div>
			<h2>Math & Modelling</h2>
			<div id="mnm">
				<MemberProfile name="alexandra-chen" />
			</div>
			<h2>Human Practices</h2>
			<div id="hp"></div>
		</section>
	</main>
</TeamLayout>

<style lang="scss">
	@import '../global.scss';

	main {
		.hero {
			display: flex;
			justify-content: center;
			align-items: center;
			gap: 3rem;

			h1 {
				font-size: 5rem;
			}
		}
	}

	.members-container {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 3rem;
		padding: 3rem;

		h2 {
			font-size: 3rem;
			&:nth-of-type(1) {
				color: $lnd;
			}
			&:nth-of-type(2) {
				color: $mnm;
			}
			&:nth-of-type(3) {
				color: $hp;
			}
		}

		#lnd {
			display: flex;
			flex-wrap: wrap;
			gap: 3rem;
			padding: 3rem;
			background: lightblue;
		}

		#mnm {
			background: purple;
		}

		#hp {
			background: teal;
		}
	}
</style>
