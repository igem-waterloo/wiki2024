---
import { ViewTransitions } from 'astro:transitions';
import NavBar from '../components/NavBar.astro';
import HeroBanner from '../components/HeroBanner.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="BovEco uses Chlorella vulgaris microalgae engineered to express phage-based lytic enzymes that selectively target methanogens in cattle, offering potential for affordable, crop-based solutions."
		/>
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
		/>
		<meta name="author" content="Waterloo iGEM" />
		<link rel="icon" type="image/svg+xml" href="img/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<NavBar />
		<!-- <div transition:animate="slide">
			<slot />
		</div> -->
		<slot />
		<!-- <Footer /> -->
	</body>
</html>

