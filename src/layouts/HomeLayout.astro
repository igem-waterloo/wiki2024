---
import LoadingScreen from '../components/LoadingScreen.astro';
import { ViewTransitions } from 'astro:transitions';
import CursorParticles from '../components/CursorParticles.astro';
import Cloud from '../components/Cloud.astro';
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';

import ImageParagraph from '../components/ImageParagraph.astro';
