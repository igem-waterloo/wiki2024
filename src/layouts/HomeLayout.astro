---
import LoadingScreen from '../components/LoadingScreen.astro';
import CursorParticles from '../components/CursorParticles.astro';
import NavBar from '../components/NavBar.astro';
import Sun from '../components/Sun.astro';
import Cloud from '../components/Cloud.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="BovEco uses Chlorella vulgaris microalgae engineered to express phage-based lytic enzymes that selectively target methanogens in cattle, offering potential for affordable, crop-based solutions."
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
    />
    <meta name="author" content="Waterloo iGEM" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="https://static.igem.wiki/teams/5118/img/favicon.webp"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <LoadingScreen />
    <CursorParticles />
    <NavBar />
    <Sun />
    <Cloud />
    <Cloud />
    <Cloud />
    <Cloud />
    <slot />
    <Footer />
  </body>
</html>

<style lang="scss">
  @import '../global.scss';

  body {
    background: linear-gradient(
      180deg,
      hsla(45, 100%, 95%, 1) 0%,
      hsla(34, 90%, 69%, 1) 25%,
      rgb(246, 148, 63) 50%,
      hsla(34, 90%, 69%, 1) 100%
    );
  }
</style>
