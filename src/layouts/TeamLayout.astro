---
import LoadingScreen from '../components/LoadingScreen.astro';
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="BovEco uses Chlorella vulgaris microalgae engineered to express phage-based lytic enzymes that selectively target methanogens in cattle, offering potential for affordable, crop-based solutions."
		/>
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
		/>
		<meta name="author" content="Waterloo iGEM" />
		<link
			rel="icon"
			type="image/svg+xml"
			href="https://static.igem.wiki/teams/5118/img/favicon.webp"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<LoadingScreen />
		<NavBar />
		<slot />
		<Footer />
	</body>
</html>

<style lang="scss">
	@import '../global.scss';

	body {
		background-color: $primary;
		background-image: radial-gradient(
				circle at 25% 30%,
				rgb(113, 107, 107) 20%,
				transparent 1%
			),
			radial-gradient(circle at 80% 40%, rgb(113, 107, 107) 15%, transparent 1%),
			radial-gradient(circle at 65% 85%, rgb(113, 107, 107) 10%, transparent 1%),
			radial-gradient(circle at 70% 20%, rgb(113, 107, 107) 18%, transparent 1%);
		background-position: right right;
		background-repeat: repeat-y;
		animation: move-blobs-around-screen 1000s infinite alternate ease-in-out;
	}

	@keyframes move-blobs-around-screen {
		0% {
			background-size: 30em 30em;
			background-position: 0% 0%;
		}
		50% {
			background-size: 20em 20em;
			background-position:
				30% 35%,
				75% 45%,
				45% 80%,
				60% 90%,
				65% 25%,
				35% 75%;
		}
		100% {
			background-size: 60em 60em;
			background-position:
				20% 25%,
				85% 35%,
				35% 70%,
				70% 80%,
				75% 15%,
				25% 65%;
		}
	}
</style>
