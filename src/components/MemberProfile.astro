---
interface Props {
  name: string;
  profPic: string;
  sillyPic: string;
}

const { profPic, sillyPic } = Astro.props;
---

<div class="portrait">
  <img src={`img/silly/{}`} alt="" />
</div>

<style lang="scss">
  @import '../global.scss';

  .portrait {
    width: 100%;
    height: 100%;
    border-radius: 50%;
  }
</style>
