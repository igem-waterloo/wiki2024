---
interface Props {
  name: string;
  profPic: string;
  sillyPic: string;
}

const { name, sillyPic } = Astro.props;
---

<div class="portrait">
  <img src=`img/members/silly/${sillyPic}.jpg` alt="" />
  <div>{name}</div>
</div>

<style lang="scss">
  @import '../global.scss';

  .portrait {
    width: 100%;
    height: 100%;
    border-radius: 50%;
  }
</style>
