---
interface Props {
  name: string;
}

const formatName = (name: string): string => {
  return name
    .split('-')
    .map(part => part.charAt(0).toUpperCase() + part.slice(1))
    .join(' ');
};

const { name } = Astro.props;
const formattedName = formatName(name);
---

<div class="profile">
  <img
    class="pic"
    src=`https://static.igem.wiki/teams/5118/img/members/prof/${name}.webp`
    onmouseover=`this.src='https://static.igem.wiki/teams/5118/img/members/silly/${name}.webp'`
    onmouseout=`this.src='https://static.igem.wiki/teams/5118/img/members/prof/${name}.webp'`
    alt={name}
  />
  <div>{formattedName}</div>
</div>

<style lang="scss">
  @import '../global.scss';

  .profile {
    display: flex;
    flex-direction: column;
    align-items: center;
    // width: 10rem;
    // border-radius: 50%;

    .pic {
      object-fit: cover;
      width: 20rem;
      height: 20rem;
      // border-radius: 50%;
    }
  }
</style>
