---
// PixelatedCard.astro
interface Props {
	title?: string;
	content?: string;
}

const { title, content } = Astro.props;
---

<div class="pixelated-card">
	{title && <h2 class="pixelated-card-title">{title}</h2>}
	<div class="pixelated-card-content">
		{content}
	</div>
</div>

<style lang="scss">
	@import '../global.scss';
	.pixelated-card {
		background-color: white;
		padding: 1.5em;
		margin: 2em 0;
		border: 5px solid black;
		border-radius: 8px;
		background: #f0f0f0;
		box-shadow:
			4px 4px 0 black,
			8px 8px 0 #852424;
		max-width: 600px;
		overflow: hidden;
		position: relative;

		/* Pixelated border */
		border-image: url('/img/pixel-border.png') 30 repeat;
		border-width: 1px;

		/* Add pixelated look */
		image-rendering: pixelated;

		/* Pixelate content for effect */
		background-size: 30px 30px;
		background-repeat: repeat;
		animation: pixel-move 5s infinite alternate ease-in-out;
	}

	.pixelated-card-title {
		font-family: 'Press Start 2P', sans-serif;
		font-size: 1.4rem;
		margin-bottom: 1em;
		text-align: center;
	}

	.pixelated-card-content {
		font-family: 'Press Start 2P', sans-serif;
		font-size: 0.95rem;
		line-height: 1.6;
	}

	/* Optional pixelated effect on hover */
	.pixelated-card:hover {
		transform: scale(1.01);
		transition: transform 0.3s ease;
		// opacity: 0.5;
		// @include transition-ease;
	}

	@keyframes pixel-move {
		0% {
			background-position: 0% 0%;
		}
		100% {
			background-position: 100% 100%;
		}
	}
</style>
