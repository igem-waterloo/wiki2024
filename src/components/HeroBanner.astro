---
interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;
---

<div>
  <!-- <img src={image} alt={title} /> -->
  <h1>{title}</h1>
  <p>{description}</p>
</div>

<style lang="scss">
  @import '../global.scss';

  div {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    margin: 2rem;
    border-radius: 1rem;
    background-color: black;
    color: $primary;
    opacity: 0.8;
    z-index: 10;

    h1 {
      font-size: 2rem;
    }

    p {
      font-size: 1.25rem;
    }

    img {
      object-fit: contain;
      width: 100%;
      z-index: -10;
      position: absolute;
      border-radius: 1rem;
    }
  }
</style>
