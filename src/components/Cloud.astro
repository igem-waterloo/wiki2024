interface Props {
  type: string;
  layer: string;
}

const { type, layer } = Astro.props;
---

<img class={layer} src={`img/clouds/${type}.png`} alt="" />
<!-- <img class="background offscreen" src="img/cloud.png" alt="" /> -->

<style lang="scss">
  @import '../global.scss';

  .front {
    width: 100em;
    opacity: 0.7;
    z-index: 1;
    overflow-x: hidden;
    position: absolute;
    animation: front 40s linear infinite;
  }

  .back {
    width: 50em;
    opacity: 0.4;
    z-index: -1;
    position: absolute;
    left: -5rem;
    animation: back 70s linear infinite;
  }

  @keyframes front {
    0% {
      // transform: translateX(-5rem);
    }
    // 50% {
    //   transform: translateY(50px);
    // }
    99% {
      transform: translateX(100vw);
      // opacity: 0;
    }
    100% {
      // transform: translateX(100vw);
      opacity: 0;
    }
  }

  @keyframes back {
    0% {
      transform: translateX(-5rem);
    }
    // 50% {
    //   transform: translateY(-70px);
    // }
    100% {
      transform: translateX(100vw);
      opacity: 0;
    }
  }
</style>
