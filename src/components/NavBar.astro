      font-family: 'Pixelify Sans', 'Courier New', sans-serif;
    }

    .dropdown {
      overflow: hidden;

      .dropdown-content {
        display: flex;
        flex-direction: column;
        height: 0px !important;
        opacity: 0;
        line-height: 2em;
        font-weight: normal;
        color: $accent-2;
        position: absolute;
      }

      &:hover .dropdown-content {
        // display: flex;
        // flex-direction: column;
        height: 5em !important;
        opacity: 1;
        @include transition-ease;
      }

      a {
        &:hover {
          color: $accent-1;
          @include transition-ease;
        }

        &:focus {
          color: $accent-1;
        }
      }
    }
  }
</style>
