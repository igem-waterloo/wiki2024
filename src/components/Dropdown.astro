---
// Props interface to pass the heading
interface Props {
  heading: string;
}

const { heading } = Astro.props;
---

<script>
  const dropdown = document.querySelector('#dropdown');
  const button = document.querySelector('button');

  // Switch arrow (⯈ to ⯆), and show content
  document.addEventListener('click', e => {
    if (e.target === dropdown) dropdown?.classList.toggle('open');
    if (e.target === button) {
      dropdown?.classList.toggle('open');
      button?.classList.toggle('open');
    }
  });
</script>

<div id="dropdown">
  <button>
    {heading}
  </button>
  <div class="content">
    <slot />
  </div>
</div>

<style lang="scss">
  @import '../global.scss';

  #dropdown {
    display: inline-block;
    // width: 100%;
    position: relative;

    button {
      font-family: inherit;
      font-size: 2rem;
      background-color: $accent-1;
      color: $primary;
      padding: 10px;
      border: none;
      cursor: pointer;
      transition: all 0.3s ease;

      &:hover {
        background-color: $accent-3;
      }

      &.open {
        &::before {
          content: '⯆';
          margin-right: 5px;
        }

        .content {
          // display: flex;
          // display: block;
          opacity: 1;
          // @include transition-ease;
        }
      }

      &::before {
        content: '⯈';
        margin-right: 5px;
        transition: transform 0.3s ease;
      }
    }

    .content {
      // display: none;
      opacity: 0;
      min-width: 160px;
      background-color: #f9f9f9;
      box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
      position: absolute;
      z-index: 1;
    }

    &.open .content {
      opacity: 1;
    }
  }
</style>
